# Source this before building: . ./build-win64.env
# MinGW cross-compiler for Windows x64 (requires: apt install gcc-mingw-w64-x86-64)
# Note: surge-ping raw ICMP sockets require Administrator privileges on Windows
export CC_x86_64_pc_windows_gnu=x86_64-w64-mingw32-gcc
export AR_x86_64_pc_windows_gnu=x86_64-w64-mingw32-ar
export CARGO_BUILD_TARGET=x86_64-pc-windows-gnu
export STRIP=x86_64-w64-mingw32-strip
export EXEC=target/x86_64-pc-windows-gnu/release/pi-glass.exe
export RUSTFLAGS="-C target-feature=+crt-static"
