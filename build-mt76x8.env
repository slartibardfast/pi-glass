# Source this before building: . ./build-mt76x8.env
# Musl cross-compiler for ramips/mt76x8 (MIPS32r2 little-endian)
# Requires nightly + rust-src (Tier 3 target, no prebuilt std):
#   cargo +nightly build -Z build-std=std --release
export CC_mipsel_unknown_linux_musl=/home/david/.local/mipsel-linux-muslsf-cross/bin/mipsel-linux-muslsf-gcc
export AR_mipsel_unknown_linux_musl=/home/david/.local/mipsel-linux-muslsf-cross/bin/mipsel-linux-muslsf-ar
export CFLAGS_mipsel_unknown_linux_musl="-march=mips32r2 -msoft-float"
export CARGO_BUILD_TARGET=mipsel-unknown-linux-musl
export STRIP=/home/david/.local/mipsel-linux-muslsf-cross/bin/mipsel-linux-muslsf-strip
export EXEC=target/mipsel-unknown-linux-musl/release/pi-glass
export MAILER_EXEC=target/mipsel-unknown-linux-musl/release/pi-glass-mailer
