# Source this before building: . ./build-aarch64.env
# Musl cross-compiler for Pi 3/4/5 and Pi Zero 2 W (AArch64)
# Requires aarch64-linux-musl-cross in ~/.local/ (from musl.cc)
#   rustup target add aarch64-unknown-linux-musl
export CC_aarch64_unknown_linux_musl=/home/david/.local/aarch64-linux-musl-cross/bin/aarch64-linux-musl-gcc
export AR_aarch64_unknown_linux_musl=/home/david/.local/aarch64-linux-musl-cross/bin/aarch64-linux-musl-ar
export CARGO_BUILD_TARGET=aarch64-unknown-linux-musl
export STRIP=/home/david/.local/aarch64-linux-musl-cross/bin/aarch64-linux-musl-strip
export EXEC=target/aarch64-unknown-linux-musl/release/pi-glass
export MAILER_EXEC=target/aarch64-unknown-linux-musl/release/pi-glass-mailer
